---
interface Props {
    title: string
    date: string
    tasks: string[] // cambiado a un array de strings
    stack: string

}

const { title, date, tasks, stack } = Astro.props
---

<div 
    class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-gray-700"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-sky-800 dark:text-sky-200/80">{date}</time>

<h3 class="text-lg font-semibold text-yellow-800 dark:text-yellow-200 mt-2">{title}</h3>

<ul class="mb-4 text-base font-normal dark:text-gray-200 text-pretty">
    {tasks.map((task) => (
        <li>- {task}</li>
    ))}
</ul>

<p class="mb-4 text-base font-normal dark:text-gray-200 text-pretty">Stack: {stack}</p>