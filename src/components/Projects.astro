---
import Drf from "./icons/Drf.astro"
import Python from "./icons/Python.astro";
import MongoDB from "./icons/MongoDB.astro";

const TAGS = {
  DRF: {
    name: "Django",
    class: "bg-black text-white",
    icon: Drf
  },
  Python: {
    name: "Python",
    class: "bg-[#003159] text-white",
    icon: Python
  },
  MongoDB: {
    name: "MongoDB",
    class: "bg-black text-white",
    icon: MongoDB
  }
}

const PROJECTS = [
    {
        title: 'Api de Pagos de Servicios',
        description: 'Creación de API de pagos con drf usando versionamiento',
        github: 'https://github.com/vmarialuzm/ProyectoFinal_drf',
        image: '/projects/proyectoDRF.jpg',
        tags: [TAGS.DRF]
    },
    {
        title: 'Api Rick and Morty',
        description: 'Para este proyecto consumí la api Rick and Morty, inserté los datos en una colección de MongoDB y creé vistas HTML usando PyMongo',
        github: 'https://github.com/vmarialuzm/ProyectoFinal_Unidad3_2',
        image: '/projects/proyectoFlask.jpg',
        tags: [TAGS.Python, TAGS.MongoDB]
    },
]
---

{
    PROJECTS.map(({ image, title, description, tags }) => (
        <article class="mb-8">
            <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map(tag => (
                    <li>
                        <span
                            class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 border border-white/10`}
                        >
                            <tag.icon class="size-4" />
                                {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img 
                loading="lazy"
                class="rounded shadow-2xl shadow-white/10 aspect-video"
                src={image} 
                alt={`Captura de pantalla del proyecto ${image}`} 
            />
        </article>
    ))
}